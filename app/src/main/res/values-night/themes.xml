<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_800</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_300</item>
        <item name="colorSecondaryVariant">@color/green_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorStrongText">@color/blue_500</item>
        <item name="colorNormalText">@color/white</item>
        <item name="alertDialogTheme">@style/Theme.App.Dialog</item>
        <item name="colorIcon">@color/gray_100</item>
    </style>

    <style name="Theme.App.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:windowBackground">@color/gray_900</item>
    </style>
</resources>
